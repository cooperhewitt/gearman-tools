#!/usr/bin/env python

import sys
import json
import time
import gearman
import logging

if __name__ == '__main__':

    import optparse

    parser = optparse.OptionParser()
    parser.add_option('--job', dest='job', default='debug', action='store', help='')
    parser.add_option('--host', dest='host', default='localhost', action='store', help='')
    parser.add_option('--port', dest='port', default='4730', action='store', help='')
    parser.add_option("-v", "--verbose", dest="verbose", action="store_true", help="enable chatty logging; default is false", default=False)

    (opts, args) = parser.parse_args()
    
    if opts.verbose:
        logging.basicConfig(level=logging.DEBUG)
    else:
        logging.basicConfig(level=logging.INFO)

    server = "%s:%s" % (opts.host, opts.port)
    pool = [ server ]

    client = gearman.GearmanClient(pool)

    while True:

        input = raw_input("Send data: ")
        ts = time.time()

        data = { 'input': input, 'timestamp': ts }
        data = json.dumps(data)

        rsp = client.submit_job(opts.job, data)
